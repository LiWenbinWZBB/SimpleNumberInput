<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:simplenumber="clr-namespace:SimpleNumberInput;assembly=SimpleNumberInput"
        xmlns:local="clr-namespace:Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <simplenumber:SimpleInteger x:Name="SInteger" MaxValue="100" 
                                    Grid.Row="0" Margin="30,5"/>
        <Slider HorizontalAlignment="Stretch" Grid.Row="1" 
                VerticalAlignment="Center" Width="Auto" Maximum="100"
                Value="{Binding Path=Value, ElementName=SInteger}"/>

    </Grid>
</Window>
